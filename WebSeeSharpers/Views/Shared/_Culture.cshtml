@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Http.Features
@using System.Globalization
@inject IViewLocalizer localizer
@inject IOptions<RequestLocalizationOptions> _locOptions

@{
    var culture = Context.Features.Get<IRequestCookiesFeature>();
    var cultureList = _locOptions.Value.SupportedUICultures.Select(x => new SelectListItem {Value = x.Name, Text = x.Name}).ToList();

}
<select name="culture" asp-for="@culture.RequestCulture.UICulture.Name" asp-items="cultureList" class="form-select" aria-label="Default select example">
        <option selected>Open this select menu</option>
        <option value="nl">Nederlands</option>
        <option value="en">English</option>
</select>

